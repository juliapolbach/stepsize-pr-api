{
	"roots": ["<rootDir>/test"],
	"testMatch": ["**/__tests__/**/*.+(ts|js)", "**/?(*.)+(spec|test).+(ts|js)"],
	"transform": {
		"^.+\\.(ts)?$": "ts-jest"
	},
  "setupFilesAfterEnv": ["<rootDir>/test/setupTests.ts"],
  "resetMocks": true,
  "collectCoverageFrom" : ["lib/**/!(index|options)*.(ts)"]
}
