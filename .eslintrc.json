{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "build",
    "node_modules"
  ],
  "rules": {
    "no-loss-of-precision": 0,
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["error"],
    "no-useless-constructor": "off"
  },
  "overrides": [{
    "files": ["*.raw.ts"],
    "rules": {
      "camelcase": "off",
      "@typescript-eslint/camelcase": "off"
    }
  }]
}
